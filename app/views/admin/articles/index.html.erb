<div>

  <div>
    <%= link_to("新建文章", new_admin_article_path, :class => "btn btn-default pull-right" )%>
  </div>

  <h2>文章列表</h2>

    <table class="table table-boldered">
      <thead>
        <tr>
          <th>ID</th>
          <th>标题</th>
          <th>简介</th>
          <th>主图</th>
          <th>修改时间</th>
          <th>管理</th>
        </tr>
      </thead>
      <tbody>
        <% @articles.each do |article| %>
        <tr>
          <td><%= article.id %></td>
          <td><%= article.title %></td>
          <td><%= article.intro %></td>
          <td><%= image_tag(article.article_cover.thumb.url) %></td>
          <td><%= article.created_at %></td>
          <td>
            <%= link_to("编辑", edit_admin_article_path(article), :class => "btn btn-xs btn-default" )%>
            <%= link_to("删除", admin_article_path(article), method: :delete, :class => "btn btn-xs btn-default", data: { confirm: "确定删除" }) %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

</div>
