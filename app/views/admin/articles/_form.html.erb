<%= simple_form_for [:admin, @article] do |f| %>

  <div class="form-group">
    <%= f.input :title, :label => "标题" %>
    <%= f.input :intro, :label => "简介" %>
    <%= f.cktext_area :description, as: :ckeditor, ckeditor: { toolbar: 'mini', language: 'zh-CN', :label => "文章内容" } %>
    <%= f.input :thumbnail, as: :file, :label => "主图" %>
    <%= f.submit "提交", :class => "btn btn-sm btn-default", :data => { disable_with: "Submiting..." } %>
  </div>

<% end %>
